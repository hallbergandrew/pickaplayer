<% if @team.errors.any? %>
  <h3>Please fix these errors:</h3>
  <ul>
    <% @team.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for(@team, :url => sport_teams_path) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.label :state %>
    <%= f.text_field :state %>
  </div>
  <div class="form-group">
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>
  <div class="form-group">
    <%= f.label :zipcode %>
    <%= f.text_field :zipcode %>
  </div>
  <div class="form-group">
     <%= f.hidden_field :sport_id, :value => @sport.id %></br>
   </div>
  <%= f.submit(:class => "btn btn-primary") %>
<% end %>

