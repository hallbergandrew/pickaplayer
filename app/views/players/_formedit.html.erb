<% if @player.errors.any? %>
  <h3>Please fix these errors:</h3>
  <ul>
    <% @player.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for(@player, :url => sport_team_player_path) do |f| %>
  <div class="form-group">
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </div>
  <div class="form-group">
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </div>
  <div class="form-group">
    <%= f.label :number %>
    <%= f.text_field :number %>
  </div>
  <div class="form-group">
    <%= f.label :position %>
    <%= f.text_field :position %>
  </div>
  <div class="form-group">
     <%= f.hidden_field :team_id, :value => @team.id %></br>
   </div>
  <%= f.submit(:class => "btn btn-primary") %>
<% end %>
